<div class="col-3">
  <%= form_with(model: post, html: { multipart: true }) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> запретил сохранение этого поста:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-5">
      <%= form.label "Название поста", style: "display: block" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= form.label "Содержание", style: "display: block" %>
      <%= form.text_area :content, class: "form-control" %>
    </div>

    <div>
      <%= form.file_field :image, class: "form-control mt-4" %>
    </div>

    <div class="mt-3">
      <%= form.submit "Создать / Обновить", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
