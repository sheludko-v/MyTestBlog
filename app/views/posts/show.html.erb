    <p><%= link_to "Редактировать", edit_post_path(@post) %></p>

    <p><%= link_to "К списку постов", posts_path %></p>

    <%= button_to "Удалить", @post, class: "btn btn-danger mt-3", method: :delete %>
  </div>
<% end %>
